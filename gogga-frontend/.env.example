# GOGGA Authentication Environment Variables
# Copy to .env.local and fill in the values

# Base URL for magic link generation
# Local dev examples:
# - Host dev: http://localhost:3000
# - Docker on LAN: http://192.168.0.130:3002
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# EmailJS Configuration (service_q6alymo)
# Get keys from https://dashboard.emailjs.com/admin
EMAILJS_PUBLIC_KEY=your_emailjs_public_key
EMAILJS_PRIVATE_KEY=your_emailjs_private_key
EMAIL_FROM_NAME="VCB-AI Support"
EMAIL_FROM=hello@vcb-ai.online

# NextAuth Secret (generate: openssl rand -base64 32)
NEXTAUTH_SECRET=your_complex_secret_here
NEXTAUTH_URL=http://localhost:3000

# Database (SQLite file in prisma folder)
DATABASE_URL="file:./dev.db"

# PayFast (South African Payment Gateway)
# Get from https://www.payfast.co.za/login
PAYFAST_MERCHANT_ID=your_payfast_merchant_id
PAYFAST_MERCHANT_KEY=your_payfast_merchant_key
PAYFAST_PASSPHRASE=your_payfast_passphrase
PAYFAST_ENV=sandbox  # sandbox or production

# Backend API URL
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# PostHog Analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://eu.i.posthog.com
